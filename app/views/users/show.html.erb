<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3>Your account details:</h3>
				</div>

				<div class="panel-body">
					<h4>
						<strong>Name:</strong> <%= @user.name %>
					</h4>
					<h4>
						<strong>Email:</strong> <%= @user.email %>
					</h4>

					<%= link_to 'Edit your profile', edit_user_url, {class: 'btn btn-primary navbar-btn widen', role: 'button'} %>

				</div>
			</div>
		</div>

		<div class="row">
			<h3>Your posts:</h3>
			<% @user.posts.each do |post| %>
			<div class="row">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="share-tray">
							<ul>
								<li><span class="icomoon icon-facebook3"></span></li>
								<li><span class="icomoon icon-twitter3"></span></li>
							</ul>
						</div>
						<h3>
							<%= post.title %>
						</h3>
						<p>
							<%= post.body %>
						</p>
						<div class="text-right">
							<!-- <a href="/upvote">upvote</a> -->
							<!-- <a href="/upvote">downvote</a> -->
							<%= link_to 'Show', post %>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div> <!-- /row -->
	</div> <!-- /com-md-8 -->
