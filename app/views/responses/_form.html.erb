<%= form_for(@response) do |f| %>
<% if @response.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</h2>

  <ul>
    <% @response.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field input-group widen">
  <%= f.label :body, class: 'sr-only' %><br>
  <%= f.text_area :body, rows: 3, class: 'form-control', placeholder: 'let us know what you think...' %>
</div>
<div class="actions">
  <%= f.submit class: 'btn btn-success widen' %>
</div>
<% end %>
