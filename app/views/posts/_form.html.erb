<%= form_for(@post) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field input-group widen">
  <%= f.label :title, class: 'sr-only' %><br>
  <%= f.text_field :title, class: 'form-control', placeholder: 'title', autofocus: 'on' %>
</div>
<div class="field input-group widen">
  <%= f.label :body, class: 'sr-only' %><br>
  <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: 'make your case...' %>
</div>
<div class="actions">
  <%= f.submit class: 'btn btn-success widen' %>
</div>
<% end %>