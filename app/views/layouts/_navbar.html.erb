<div class='navbar navbar-fixed-top navbar-default' role='navigation'>
	<div class='container'>
		<div class='navbar-header'>
			<button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse'>
				<span class='sr-only'>Toggle navigation</span>
				<span class='icon-bar'></span>
				<span class='icon-bar'></span>
				<span class='icon-bar'></span>
			</button>
			<%= link_to root_url, class: 'navbar-brand' do %>
			<span class="icomoon icon-hammer2"> Gavel</span>
			<% end %>
		</div>
		<div class='navbar-collapse collapse'>
			<ul class='nav navbar-nav'>
				<li><%= link_to 'About', page_about_url %></li>
				<li><%= link_to 'Contact us', page_contact_url %></li>
			</ul>
			<div class='navbar-right'>
				<% if @current_user.present? %>
				<p class="navbar-text">
					Signed in as <%= link_to @current_user.name, {controller: "users", action: "show", id: @current_user.id}, class: 'navbar-link' %>
				</p>
				<%= link_to 'Make a decision', new_post_url, {class: 'btn btn-primary navbar-btn', role: 'button'} %>
				<%= link_to 'Log out', logout_url, {class: 'btn btn-danger navbar-btn', role: 'button'} %>
				<% else %>
				<%= link_to 'Sign up', signup_url, {class: 'btn btn-warning navbar-btn', role: 'button'} %>
				<%= link_to 'Log in', login_url, {class: 'btn btn-info navbar-btn', role: 'button'} %>
				<% end %>
			</div>
		</div>
	</div><!--/.navbar-collapse -->
</div>
</div>